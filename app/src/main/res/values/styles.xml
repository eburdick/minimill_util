<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->

        <!-- For the resting Spinner style -->
        <item name="android:spinnerItemStyle">
            @style/spinnerItemStyle
        </item>

        <!-- For each individual Spinner list item once clicked on -->
        <item name="android:spinnerDropDownItemStyle">
            @style/spinnerDropDownItemStyle
        </item>

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- custom styles for spinner item and dropdown text -->
    <style name="spinnerItemStyle">
        <item name="android:padding">@dimen/spinner_item_padding</item>
        <item name="android:textSize">@dimen/inputTextSize</item>
        <item name="android:textColor">@color/spinnerText</item>
    </style>

    <style name="spinnerDropDownItemStyle">
        <item name="android:padding">@dimen/spinner_dropdown_padding</item>
        <item name="android:textSize">@dimen/inputTextSize</item>
    </style>


</resources>
